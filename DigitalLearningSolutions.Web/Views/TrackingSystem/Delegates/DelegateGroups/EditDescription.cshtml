@inject IConfiguration Configuration
@using DigitalLearningSolutions.Web.Models.Enums
@using DigitalLearningSolutions.Web.ViewModels.TrackingSystem.Delegates.DelegateGroups
@using Microsoft.Extensions.Configuration
@model EditDelegateGroupDescriptionViewModel

@{
  var errorHasOccurred = !ViewData.ModelState.IsValid;
  ViewData["Title"] = $"{(errorHasOccurred ? "Error" : "")} Edit description for { Model.GroupName} group(optional)";
  ViewData["Application"] = ApplicationType.TrackingSystem.HeaderExtension;
  ViewData["HeaderPath"] = ApplicationType.TrackingSystem.HeaderPath;
  ViewData["HeaderPathName"] = ApplicationType.TrackingSystem.HeaderPathName;
}

@section NavMenuItems {
  <partial name="_AutoNavMenuItems" model="ApplicationType.TrackingSystem" />
}

<div class="nhsuk-grid-row">
  <div class="nhsuk-grid-column-full">
    <h1 class="nhsuk-heading-xl">Edit description for @Model.GroupName group (optional)</h1>
    <form class="nhsuk-u-margin-bottom-3" method="post" novalidate asp-action="EditDescription">

      @if (errorHasOccurred)
      {
        <vc:error-summary order-of-property-names="@(new[] { nameof(Model.Description) })" />
      }

      <vc:text-area asp-for="@nameof(Model.Description)"
                    label=""
                    populate-with-current-value="true"
                    rows="8"
                    spell-check="true"
                    hint-text=""
                    css-class=""
                    character-count="1000" />

      <button class="nhsuk-button" type="submit" value="save">Save</button>
    </form>
    <vc:cancel-link asp-controller="DelegateGroups" asp-action="Index" />
  </div>
</div>

@inject IConfiguration Configuration
@using DigitalLearningSolutions.Web.Models.Enums
@using Microsoft.Extensions.Configuration
@model DelegatePage


<h2 class="side-nav__heading">Delegates</h2>
<ul class="nhsuk-list side-nav__list">

  <vc:side-menu-link
    asp-action="Index"
    asp-controller="AllDelegates"
    link-text="All delegates"
    is-current-page="Model == DelegatePage.AllDelegates" />

  <vc:side-menu-link-with-href
    href="@Configuration["CurrentSystemBaseUrl"]/tracking/delegategroups"
    link-text="Delegate groups"
    is-current-page="Model == DelegatePage.DelegateGroups"
    open-in-new-tab="false" />

  <vc:side-menu-link-with-href
    href="@Configuration["CurrentSystemBaseUrl"]/tracking/coursedelegates"
    link-text="Course delegates"
    is-current-page="Model == DelegatePage.CourseDelegates"
    open-in-new-tab="false" />

  <vc:side-menu-link
    asp-action="Index"
    asp-controller="DelegateApprovals"
    link-text="Approve registrations"
    is-current-page="Model == DelegatePage.ApproveDelegateRegistrations" />

</ul>

@inject IConfiguration Configuration
@using DigitalLearningSolutions.Web.ViewModels.TrackingSystem.CourseSetup
@using Microsoft.Extensions.Configuration
@model EditAdminFieldViewModel

<link rel="stylesheet" href="@Url.Content("~/css/shared/cardWithButtons.css")" asp-append-version="true">

@{
  ViewData["Title"] = "Edit Course Admin Field";
  ViewData["Application"] = "Tracking System";
  ViewData["HeaderPath"] = $"{Configuration["AppRootPath"]}/TrackingSystem/Centre/Dashboard";
  ViewData["HeaderPathName"] = "Tracking System";
  var backLinkData = new Dictionary<string, string> { { "customisationId", Model.CustomisationId.ToString() } };
}

@section NavMenuItems {
  <partial name="/Views/TrackingSystem/Shared/_NavMenuItems.cshtml" />
}

@section NavBreadcrumbs {
  <nav class="nhsuk-breadcrumb" aria-label="Breadcrumb">
    <div class="nhsuk-width-container">
      <ol class="nhsuk-breadcrumb__list">
        <li class="nhsuk-breadcrumb__item">
          <a class="nhsuk-breadcrumb__link" asp-controller="CourseSetup" asp-action="Index">Centre course setup</a>
        </li>
        <li class="nhsuk-breadcrumb__item">
          <a class="nhsuk-breadcrumb__link" asp-controller="ManageCourse" asp-action="Index" asp-route-customisationId="@Model.CustomisationId">Manage course</a>
        </li>
        <li class="nhsuk-breadcrumb__item">
          <a class="nhsuk-breadcrumb__link" asp-controller="AdminFields" asp-action="Index" asp-route-customisationId="@Model.CustomisationId">Manage course admin fields</a>
        </li>
      </ol>
      <p class="nhsuk-breadcrumb__back">
        <a class="nhsuk-breadcrumb__link" asp-controller="ManageCourse" asp-action="Index" asp-route-customisationId="@Model.CustomisationId">Back to manage course admin fields</a>
      </p>
    </div>
  </nav>
}

<div class="nhsuk-grid-row">
  <div class="nhsuk-grid-column-full">

    <h1 class="nhsuk-heading-xl">Edit course admin field</h1>

    <a class="nhsuk-button" role="button" href="#">Add</a>

    <a class="nhsuk-button" role="button" href="#">Bulk add</a>

    <a class="nhsuk-button" role="button" href="#">Save</a>

    <vc:back-link asp-controller="ManageCourse" asp-action="Index" asp-all-route-data="@backLinkData" link-text="Go back" />

  </div>
</div>

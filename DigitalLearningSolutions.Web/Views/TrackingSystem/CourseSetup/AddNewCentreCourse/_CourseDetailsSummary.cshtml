@using DigitalLearningSolutions.Web.ViewModels.TrackingSystem.CourseSetup.AddNewCentreCourse
@model SummaryViewModel

<div class="nhsuk-summary-list__row">
  <dt class="nhsuk-summary-list__key">
    Course
  </dt>
  <dd class="nhsuk-summary-list__value">
    @Model.ApplicationName
  </dd>
  <dd class="nhsuk-summary-list__actions">
    <a asp-action="SelectCourse">
      Change<span class="nhsuk-u-visually-hidden"> course</span>
    </a>
  </dd>
</div>

<div class="nhsuk-summary-list__row">
  <dt class="nhsuk-summary-list__key">
    Course name
  </dt>
  <dd class="nhsuk-summary-list__value">
    @(Model.CustomisationName == string.Empty ? Model.ApplicationName : $"{Model.ApplicationName} - {Model.CustomisationName}")
  </dd>
  <dd class="nhsuk-summary-list__actions">
    <a asp-action="SetCourseDetails">
      Change<span class="nhsuk-u-visually-hidden"> course name</span>
    </a>
  </dd>
</div>

<div class="nhsuk-summary-list__row">
  <dt class="nhsuk-summary-list__key">
    @(Model.Password != null ? "Password" : "Password set")
  </dt>
  <dd class="nhsuk-summary-list__value">
    @(Model.Password ?? "No")
  </dd>
  <dd class="nhsuk-summary-list__actions">
    <a asp-action="SetCourseDetails">
      Change<span class="nhsuk-u-visually-hidden"> password</span>
    </a>
  </dd>
</div>

<div class="nhsuk-summary-list__row">
  <dt class="nhsuk-summary-list__key">
    @(Model.NotificationEmails != null ? "Completion notification email" : "Send notification emails")
  </dt>
  <dd class="nhsuk-summary-list__value">
    @(Model.NotificationEmails ?? "No")
  </dd>
  <dd class="nhsuk-summary-list__actions">
    <a asp-action="SetCourseDetails">
      Change<span class="nhsuk-u-visually-hidden"> notification email</span>
    </a>
  </dd>
</div>

<div class="nhsuk-summary-list__row">
  <dt class="nhsuk-summary-list__key">
    Completion criteria
  </dt>
  <dd class="nhsuk-summary-list__value">
    @if (Model.PostLearningAssessment) {
      <p>Post learning assessment</p>
    } else {
      <p>Required learning percentage: @(Model.RequiredLearningPercentage)%</p>
      @if (Model.DiagAssess) {
        <p>Required diagnostic percentage: @(Model.RequiredDiagnosticPercentage)%</p>
      }
    }
  </dd>
  <dd class="nhsuk-summary-list__actions">
    <a asp-action="SetCourseDetails">
      Change<span class="nhsuk-u-visually-hidden"> completion criteria</span>
    </a>
  </dd>
</div>

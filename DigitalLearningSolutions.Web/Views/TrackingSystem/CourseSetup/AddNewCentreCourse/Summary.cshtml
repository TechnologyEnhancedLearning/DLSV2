@using DigitalLearningSolutions.Web.ViewModels.TrackingSystem.CourseSetup
@model SummaryViewModel
@{
  ViewData["Title"] =  "Add new centre course - Summary";
}

<div class="nhsuk-grid-row">
  <div class="nhsuk-grid-column-full">

    <div class="nhsuk-u-margin-bottom-8">
      <h1 id="page-heading" class="nhsuk-heading-xl">Summary</h1>
    </div>

    <dl class="nhsuk-summary-list">
      <div class="nhsuk-summary-list__row">
        <dt class="nhsuk-summary-list__key">
          Course
        </dt>
        <dd class="nhsuk-summary-list__value">
          @Model.CustomisationName
        </dd>
        <dd class="nhsuk-summary-list__actions">
          <a asp-action="SelectCourse">
            Change<span class="nhsuk-u-visually-hidden"> course</span>
          </a>
        </dd>
      </div>
      <div class="nhsuk-summary-list__row">
        <dt class="nhsuk-summary-list__key">
          Course name
        </dt>
        <dd class="nhsuk-summary-list__value">
          @Model.CustomisationName - @Model.CustomisationNameSuffix
        </dd>
        <dd class="nhsuk-summary-list__actions">
          <a asp-action="SetCourseDetails">
            Change<span class="nhsuk-u-visually-hidden"> course name</span>
          </a>
        </dd>
      </div>
      <div class="nhsuk-summary-list__row">
        <dt class="nhsuk-summary-list__key">
          Password protected
        </dt>
        <dd class="nhsuk-summary-list__value">
          @(Model.Password ? Model.Password : "No")
        </dd>
        <dd class="nhsuk-summary-list__actions">
          <a asp-action="SetCourseDetails">
            Change<span class="nhsuk-u-visually-hidden"> password</span>
          </a>
        </dd>
      </div>
      <div class="nhsuk-summary-list__row">
        <dt class="nhsuk-summary-list__key">
          Completion notification email
        </dt>
        <dd class="nhsuk-summary-list__value">
          @(Model.NotificationEmails ? Model.NotificationEmails : "No")
        </dd>
        <dd class="nhsuk-summary-list__actions">
          <a asp-action="SetCourseDetails">
            Change<span class="nhsuk-u-visually-hidden"> notification email</span>
          </a>
        </dd>
      </div>
      <div class="nhsuk-summary-list__row">
        <dt class="nhsuk-summary-list__key">
          Allow self-enrolment
        </dt>
        <dd class="nhsuk-summary-list__value">

        </dd>
        <dd class="nhsuk-summary-list__actions">
          <a asp-action="SetCourseOptions">
            Change<span class="nhsuk-u-visually-hidden"> self-enrolment</span>
          </a>
        </dd>
      </div>
      <div class="nhsuk-summary-list__row">
        <dt class="nhsuk-summary-list__key">
          Allow diagnostic objective selection
        </dt>
        <dd class="nhsuk-summary-list__value">

        </dd>
        <dd class="nhsuk-summary-list__actions">
          <a asp-action="SetCourseOptions">
            Change<span class="nhsuk-u-visually-hidden"> diagnostic objective selection</span>
          </a>
        </dd>
      </div>
      <div class="nhsuk-summary-list__row">
        <dt class="nhsuk-summary-list__key">
          Course content
        </dt>
        <dd class="nhsuk-summary-list__value">

        </dd>
        <dd class="nhsuk-summary-list__actions">
          <a asp-action="SetCourseOptions">
            Change<span class="nhsuk-u-visually-hidden"> course content</span>
          </a>
        </dd>
      </div>
    </dl>

    <form method="post" asp-action="Summary">
      <button class="nhsuk-button" type="submit">Submit</button>
    </form>
    <vc:cancel-link asp-controller="CourseSetup" asp-action="Index" />
  </div>
</div>

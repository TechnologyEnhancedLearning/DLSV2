@inject IConfiguration Configuration
@using DigitalLearningSolutions.Web.ViewModels.TrackingSystem.CourseSetup.CourseContent
@using Microsoft.Extensions.Configuration
@model EditCourseContentViewModel

<link rel="stylesheet" href="@Url.Content("~/css/trackingSystem/courseContent.css")" asp-append-version="true">

@{
  ViewData["Title"] = "Edit course content";
  ViewData["Application"] = "Tracking System";
  ViewData["HeaderPath"] = $"{Configuration["AppRootPath"]}/TrackingSystem/Centre/Dashboard";
  ViewData["HeaderPathName"] = "Tracking System";
}

@section NavMenuItems {
  <partial name="/Views/TrackingSystem/Shared/_NavMenuItems.cshtml" />
}

<div class="nhsuk-grid-row">
  <div class="nhsuk-grid-column-full">

    <h1 class="nhsuk-heading-xl">Edit course content</h1>

    <div class="nhsuk-grid-row">
      <div class="nhsuk-grid-column-one-quarter">
        <p class="nhsuk-lede-text">Course:</p>
      </div>
      <div class="nhsuk-grid-column-three-quarters">
        <p class="nhsuk-lede-text nhsuk-u-font-weight-bold">@Model.CourseName</p>
      </div>
    </div>

    <form class="nhsuk-u-margin-bottom-3" method="post" asp-action="Edit">
      <input type="hidden" asp-for="CustomisationId" />
      <input type="hidden" asp-for="CourseName" />
      @foreach (var (courseSection, sectIndex) in Model.Sections.Select((s, i) => (s, i))) {
        <div class="nhsuk-panel">
          <details class="nhsuk-details nhsuk-expander">
            <summary class="nhsuk-details__summary">
              <span class="nhsuk-details__summary-text">
                @courseSection.SectionName
              </span>
            </summary>
            <div class="nhsuk-details__text nhsuk-u-margin-bottom-0">
              <input type="hidden" name="@($"{nameof(Model.Sections)}[{sectIndex}].{nameof(courseSection.SectionId)}")" value="@courseSection.SectionId" />
              <input type="hidden" name="@($"{nameof(Model.Sections)}[{sectIndex}].{nameof(courseSection.SectionName)}")" value="@courseSection.SectionName" />
              <dl class="nhsuk-summary-list">

                @foreach (var (tutorial, tutIndex) in courseSection.Tutorials.Select((t, i) => (t, i))) {
                  <div class="nhsuk-summary-list__row basic-summary-list__row">
                    <dt class="nhsuk-summary-list__key">
                      @tutorial.TutorialName
                    </dt>
                    <dd class="nhsuk-summary-list__value">
                      <input type="hidden" name="@($"{nameof(Model.Sections)}[{sectIndex}].{nameof(courseSection.Tutorials)}[{tutIndex}].{nameof(tutorial.TutorialId)}")" value="@tutorial.TutorialId" />
                      <input type="hidden" name="@($"{nameof(Model.Sections)}[{sectIndex}].{nameof(courseSection.Tutorials)}[{tutIndex}].{nameof(tutorial.TutorialName)}")" value="@tutorial.TutorialName" />
                      <input type="checkbox" name="@($"{nameof(Model.Sections)}[{sectIndex}].{nameof(courseSection.Tutorials)}[{tutIndex}].{nameof(tutorial.DiagnosticEnabled)}")" checked="@tutorial.DiagnosticEnabled" value="true" />
                      <input type="checkbox" name="@($"{nameof(Model.Sections)}[{sectIndex}].{nameof(courseSection.Tutorials)}[{tutIndex}].{nameof(tutorial.LearningEnabled)}")" checked="@tutorial.LearningEnabled" value="true" />
                    </dd>
                  </div>
                }
              </dl>
            </div>
          </details>
        </div>
      }
      <button class="nhsuk-button" type="submit" value="save">Save</button>
    </form>

    <vc:cancel-link asp-controller="CourseContent" asp-action="Index" />

  </div>
</div>

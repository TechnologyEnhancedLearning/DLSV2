@using DigitalLearningSolutions.Web.ViewModels.TrackingSystem.CourseSetup
@model SearchableCourseStatisticsViewModel

<div class="searchable-element nhsuk-panel card-with-buttons" id="@Model.CustomisationId-card">
  <details class="nhsuk-details nhsuk-expander nhsuk-u-margin-bottom-0">
    <summary class="nhsuk-details__summary">
      <span class="nhsuk-details__summary-text searchable-element-title" id="@Model.CustomisationId-name" name="name">
        @Model.CourseName
      </span>
    </summary>

    <div class="nhsuk-details__text">
      <partial name="SearchablePage/_FilterableTags" model="@Model.Tags" />

      <dl class="nhsuk-summary-list">
        <div class="nhsuk-summary-list__row">
          <dt class="nhsuk-summary-list__key">
            Category
          </dt>
          <dd class="nhsuk-summary-list__value">
            @Model.CategoryName
          </dd>
        </div>

        <div class="nhsuk-summary-list__row">
          <dt class="nhsuk-summary-list__key">
            Learning minutes
          </dt>
          <dd class="nhsuk-summary-list__value">
            @Model.LearningMinutes
          </dd>
        </div>

        <div class="nhsuk-summary-list__row">
          <dt class="nhsuk-summary-list__key">
            Total delegates
          </dt>
          <dd class="nhsuk-summary-list__value">
            @Model.DelegateCount
          </dd>
        </div>

        <div class="nhsuk-summary-list__row">
          <dt class="nhsuk-summary-list__key">
            In progress
          </dt>
          <dd class="nhsuk-summary-list__value">
            @Model.InProgressCount
          </dd>
        </div>

      </dl>

      <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-full">
          <p class="nhsuk-u-margin-bottom-0">Want to share the course?</p>
          <a href="@Model.GenerateEmailHref">Generate email</a>
        </div>

      </div>
      <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-full">
          <a href="#" class="js-only-inline copy-course-link" id="copy-course-@Model.CustomisationId">Copy course link</a>
          <p class="non-js-only">To share this course with others, click Launch Course and copy the URL to the clipboard.</p>
        </div>
      </div>

    </div>
  </details>

  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full nhsuk-u-margin-left-4">
      <a class="nhsuk-button nhsuk-u-margin-right-2 nhsuk-u-margin-bottom-2"
         role="button"
         id="launch-course-@Model.CustomisationId"
         asp-controller="LearningMenu"
         asp-action="Index"
         asp-route-customisationId="@Model.CustomisationId">
        Launch course
      </a>
      <a class="nhsuk-button nhsuk-button--secondary nhsuk-u-margin-bottom-2" role="button" href="#">
        Manage course
      </a>
    </div>
  </div>
</div>

@using DigitalLearningSolutions.Web.ViewModels.LearningMenu
@model SectionContentViewModel

<div class="nhsuk-card nhsuk-u-margin-bottom-3 learning-menu-card">
  <div class="nhsuk-card__content">
    <div class="nhsuk-grid-row">
      <div class="nhsuk-grid-column-full">
        <h3 class="nhsuk-card__heading" id="consolidation-exercise-name">
          @Model.ConsolidationExerciseLabel
        </h3>
      </div>
    </div>
    <div class="nhsuk-grid-row">
      <div class="nhsuk-grid-column-full">
        <a class="nhsuk-button nhsuk-u-margin-bottom-0 nhsuk-u-margin-top-0"
           role="button"
           href="@Model.ConsolidationExercisePath"
           aria-describedby="consolidation-exercise-name"
           download
           target="_blank">
          Download
        </a>
      </div>
    </div>
  </div>
</div>

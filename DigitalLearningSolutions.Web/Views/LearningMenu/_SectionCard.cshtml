@using DigitalLearningSolutions.Web.ViewModels.LearningMenu
@model SectionCardViewModel

<div class="nhsuk-card nhsuk-u-margin-bottom-3 learning-menu-card">
  <div class="nhsuk-card__content">
    <div class="nhsuk-grid-row">
      <div class="nhsuk-grid-column-two-thirds">
        <h3 class="nhsuk-card__heading" id="@Model.SectionId-name">
          @Model.Title
        </h3>
        <a class="nhsuk-button nhsuk-u-margin-bottom-0 nhsuk-u-margin-top-0"
           aria-describedby="@Model.SectionId-name"
           asp-action="Section"
           asp-route-sectionId="@Model.SectionId"
           asp-route-customisationId="@Model.CustomisationId">
          View section
        </a>
      </div>
      <div class="nhsuk-grid-column-one-third section-card-result">
        <h3 class="nhsuk-heading-xs nhsuk-u-secondary-text-color">
          @Model.PercentComplete
        </h3>
        @if (Model.PostLearningAssessmentPassed)
        {
          <p class="passed-text nhsuk-u-font-size-16">Post learning assessment passed</p>
        }
      </div>
    </div>
  </div>
</div>

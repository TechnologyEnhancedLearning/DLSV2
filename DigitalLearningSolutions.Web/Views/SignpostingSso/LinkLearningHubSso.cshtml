@using DigitalLearningSolutions.Web.Helpers
@using DigitalLearningSolutions.Web.ViewModels.SignpostingSso
@model LinkLearningHubViewModel

@{
    ViewData[LayoutViewDataKeys.Title] = "Recommended Learning Resources - Account linked";
    ViewData[LayoutViewDataKeys.Application] = "Recommended Learning Resources";
    ViewData[LayoutViewDataKeys.HeaderPrefix] = "";
    var actionLinkRouteData = new Dictionary<string, string> { { "resourceId", Model.ResourceLinkId?.ToString() } };
}

<div class="nhsuk-grid-row">
  <div class="nhsuk-grid-column-full">

    <h1 class="nhsuk-heading-xl">Account linked</h1>

    @if (Model.ShowIsAlreadyLinkedWarning)
    {
      <p>Your account is already linked with Learning Hub.</p>
      <p>No change has been made.</p>
    }
    else
    {
      <p>Your account has been linked with the Learning Hub.</p>
    }
    <p>You will now be able to view the resources directly.</p>
    @if (Model.ShowResourceLink)
    {
      <p><vc:action-link asp-controller="Signposting" asp-action="ViewResource" asp-all-route-data="@actionLinkRouteData" link-text="Continue to resource" /></p>
    }
  </div>
</div>

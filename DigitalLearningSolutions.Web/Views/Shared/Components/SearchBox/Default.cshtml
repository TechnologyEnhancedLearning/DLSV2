@using DigitalLearningSolutions.Web.ViewModels.Common.ViewComponents
@model SearchBoxViewModel

<form method="get" role="search">
  @if (Model.SearchablePageViewModel.FilterEnabled)
  {
    <input type="hidden" id="filter-by" name="filterBy" value="@Model.SearchablePageViewModel.FilterString" />
  }
  @if (Model.SearchablePageViewModel.SortEnabled) {
    <input type="hidden" id="select-sort-by" name="sortBy" value="@Model.SearchablePageViewModel.SortBy" />
    <input type="hidden" id="select-sort-direction" name="sortDirection" value="@Model.SearchablePageViewModel.SortDirection" />
  }
  <div class="@Model.Class" id="search">
    <label class="nhsuk-u-visually-hidden" for="search-field">@Model.Label</label>
    <input class="search-box" id="search-field" name="searchString" type="search" placeholder="Search" autocomplete="off" value="@Model.SearchablePageViewModel.SearchString">
    <button class="nhsuk-search__submit non-js-only" type="submit" asp-action="@ViewContext.RouteData.Values["action"].ToString()" asp-route-page="1">
      <svg class="nhsuk-icon nhsuk-icon__search" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
        <path d="M19.71 18.29l-4.11-4.1a7 7 0 1 0-1.41 1.41l4.1 4.11a1 1 0 0 0 1.42 0 1 1 0 0 0 0-1.42zM5 10a5 5 0 1 1 5 5 5 5 0 0 1-5-5z"></path>
      </svg>
      <span class="nhsuk-u-visually-hidden">Search</span>
    </button>
  </div>
</form>


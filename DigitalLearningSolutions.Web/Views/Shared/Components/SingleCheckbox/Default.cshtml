@using DigitalLearningSolutions.Web.ViewModels.Common.ViewComponents
@model CheckboxItemViewModel

<div class="nhsuk-form-group @(Model.HasError ? "nhsuk-form-group--error" : "")">
    <fieldset class="nhsuk-fieldset" @if (Model.HasError) {
                    <text>
                      aria-describedby="@Model.Id-error"
                      </text>
                  }
  >
        @if (Model.HasError)
        {
          <span class="nhsuk-error-message" id="@Model.Id-error">
            <span class="nhsuk-u-visually-hidden">Error:</span> @Model.ErrorMessage
          </span>
        }

    <partial name="_CheckboxItem" model="Model" />
  </fieldset>
</div>

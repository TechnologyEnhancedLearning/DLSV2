@using DigitalLearningSolutions.Web.ViewComponents
@using DigitalLearningSolutions.Web.ViewModels.Common.ViewComponents
@model SetPasswordViewModel

<vc:text-input
  asp-for="@nameof(Model.Password)"
  label="@(Model.Label)"
  populate-with-current-value="false"
  type="password"
  spell-check="false"
  hint-text="Your new password should have a minimum of 8 characters with at least 1 letter, 1 number and 1 symbol."
  autocomplete="new-password"
  css-class="nhsuk-u-width-one-half" />

<vc:text-input
  asp-for="@nameof(Model.ConfirmPassword)"
  label="Re-type @(Model.Label.ToLower())"
  populate-with-current-value="false"
  type="password"
  spell-check="false"
  hint-text=""
  autocomplete="new-password"
  css-class="nhsuk-u-width-one-half" />

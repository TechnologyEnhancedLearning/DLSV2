@using DigitalLearningSolutions.Web.ViewModels.LearningContent
@using Microsoft.Extensions.Configuration
@inject IConfiguration configuration
@model LearningContentViewModel
@{
  ViewData["Title"] = "Learning Content";
}

<link rel="stylesheet" href="@Url.Content("~/css/home/brands.css")" />

@section NavBreadcrumbs {
  <nav class="nhsuk-breadcrumb" aria-label="Breadcrumb">
    <div class="nhsuk-width-container">
      <ol class="nhsuk-breadcrumb__list">
        <li class="nhsuk-breadcrumb__item">
          <a class="nhsuk-breadcrumb__link" asp-controller="Home" asp-action="LearningContent">Learning content</a>
        </li>
      </ol>
      <p class="nhsuk-breadcrumb__back">
        <a class="nhsuk-breadcrumb__backlink" asp-controller="Home" asp-action="LearningContent">Back to learning content</a>
      </p>
    </div>
  </nav>
}

<div class="nhsuk-grid-row">
  <div class="nhsuk-grid-column-full">
    <h1 class="brands__name">@Model.Name</h1>
    <p class="brands__description">@Model.Description</p>
  </div>
</div>

@if (Model.Tutorials.Any()) {
  <p class="brands__description">Course Tutorials</p>
  <p class="brands__body-text">Access to this content does not require login and progress is not tracked.</p>
  foreach (var tutorial in Model.Tutorials) {
    <h1>@tutorial.TutorialName</h1>
    <p>@tutorial.Objectives</p>
    <p>@tutorial.TutorialPath</p>
    <p>@tutorial.SupportingMatsPath</p>
  }
}

@using DigitalLearningSolutions.Web.ViewModels.Register
@model ClaimAccountViewModel

@{
  ViewData["Title"] = "Complete registration";
}

<div class="nhsuk-grid-row">
  <div class="nhsuk-grid-column-full">

    <h1 class="nhsuk-heading-l" id="app-page-heading">
      Complete registration
    </h1>
    <dl class="nhsuk-summary-list--no-border nhsuk-body-m word-break">
      <div class="nhsuk-summary-list__row basic-summary-list__row">
        <dt class="nhsuk-summary-list__key">
          Centre:
        </dt>
        <partial name="_SummaryFieldValue" model="@Model.CentreName" />
      </div>
      <div class="nhsuk-summary-list__row basic-summary-list__row">
        <dt class="nhsuk-summary-list__key">
          Email:
        </dt>
        <partial name="_SummaryFieldValue" model="@Model.CentreSpecificEmail" />
      </div>
    </dl>

    <p class="nhsuk-body-m">Are you sure you would like to activate this delegate record?</p>

    <form class="nhsuk-u-margin-bottom-3" method="post" asp-action="CompleteRegistration">
      <button class="nhsuk-button" type="submit">Activate</button>
    </form>

    <vc:cancel-link asp-controller="Home" asp-action="Index" />
  </div>
</div>

        }


        .footer-logo {
            display: flex;
            align-items: baseline;
            max-height: 190px;
            margin-left: 2rem;
        }

            .footer-logo img {
                max-width: 18rem;
                height: auto;
            }

        .strips {
            display: flex;
            padding: 0.5rem 0;
        }

        .strip-green {
            clip-path: polygon(0 0, 100% 0%, 98% 100%, 0% 100%);

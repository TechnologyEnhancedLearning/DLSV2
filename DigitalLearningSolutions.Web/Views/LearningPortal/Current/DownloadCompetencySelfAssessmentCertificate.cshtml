                            width: 100px;
                        }

        .fancy-box {
            width: 50px;
            height: 50px;
            position: absolute;
            left: 65px;
            bottom: -15px;
            background-color: #0063B7;
            transform: rotate(45deg);
        }

        .certificate .pg-1 .body {
            padding: 50px;
            flex: 0;
        }

        .certificate .pg-1 .footer {
            padding: 50px;
            align-items: center;
            display: flex;
            flex: 1;
            justify-content: flex-start;
            align-items: end;
        }


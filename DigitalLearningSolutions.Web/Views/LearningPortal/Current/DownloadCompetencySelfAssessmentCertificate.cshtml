            }
        }

        .certificate .nhsuk-body-s {
            font-size: 0.875rem;
            line-height: 1.71429;
            display: block;
            margin-top: 0;
            margin-bottom: 16px;
        }

        @@media (min-width: 40.0625em) {
            .certificate .nhsuk-body-s {
                font-size: 1rem;
                line-height: 1.5;
            }

            .certificate .nhsuk-body-s {
                margin-bottom: 24px;
            }
        }

        .certificate .nhsuk-body-m {
            font-size: 1rem;
            line-height: 1.5;
            display: block;
            margin-top: 0;

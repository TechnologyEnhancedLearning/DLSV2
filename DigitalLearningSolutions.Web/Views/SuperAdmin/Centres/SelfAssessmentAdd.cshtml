@using DigitalLearningSolutions.Web.ViewModels.SuperAdmin.Centres
@using DigitalLearningSolutions.Web.Extensions
@model SelfAssessmentAddViewModel
@{
    ViewData["Title"] = "Add self assessments";
    var cancelLinkData = Html.GetRouteValues();
}
<link rel="stylesheet" href="@Url.Content("~/css/learningPortal/selfAssessment.css")" asp-append-version="true">
@section NavBreadcrumbs {
    <nav class="nhsuk-breadcrumb" aria-label="Breadcrumb">
        <div class="nhsuk-width-container">
            <ol class="nhsuk-breadcrumb__list">
                <li class="nhsuk-breadcrumb__item"><a class="nhsuk-breadcrumb__link trigger-loader" asp-controller="Centres" asp-action="Index">Centres</a></li>
                <li class="nhsuk-breadcrumb__item"><a class="nhsuk-breadcrumb__link trigger-loader" asp-controller="Centres" asp-route-centreID="@ViewContext.RouteData.Values["centreId"]" asp-action="SelfAssessments">View self assessments</a></li>
            </ol>
            <p class="nhsuk-breadcrumb__back">
                <a class="nhsuk-breadcrumb__backlink"
                   asp-controller="Centres" asp-route-centreID="@ViewContext.RouteData.Values["centreId"]" asp-action="SelfAssessments">Back to view centre self assessments</a>
            </p>
        </div>
    </nav>
}

@if (Model.SelfAssessments.Any())
{
    <form method="post" asp-action="SelfAssessmentAdd">
        <fieldset class="nhsuk-fieldset">
            <legend class="nhsuk-fieldset__legend nhsuk-fieldset__legend--l">
                <h1 class="nhsuk-fieldset__heading">
                    @ViewData["Title"] to centre - @Model.CentreName
                </h1>
            </legend>
            <div class="nhsuk-hint">
                Which self assessments would you like to add?
            </div>

            @if (Model.SelfAssessments.Count() > 1)
            {
                <div class="nhsuk-grid-row nhsuk-u-margin-top-3 nhsuk-u-margin-bottom-1 js-only-block">
                    <div class="nhsuk-grid-column-full">
                        <a class="nhsuk-button select-all-button select-all status-tag nhsuk-u-margin-1" role="button" data-group="course-list" name="selectAll" value="true">Select all courses</a>
                        <a class="nhsuk-button select-all-button deselect-all status-tag nhsuk-u-margin-1" role="button" data-group="course-list" name="selectAll" value="false">Deselect all courses</a>
                    </div>
                </div>
            }
            <div class="nhsuk-form-group">
                <table class="nhsuk-table-responsive">
                    <thead role="rowgroup" class="nhsuk-table__head">
                        <tr role="row">
                            <th role="columnheader" class="" scope="col">
                                Self assessment
                            </th>
                            <th role="columnheader" class="" scope="col">
                                Provider
                            </th>
                        </tr>
                    </thead>
                    <tbody class="nhsuk-table__body">
                        @foreach (var selfAssessment in Model.SelfAssessments)
                        {
                            <tr role="row" class="nhsuk-table__row">
                                <td class="nhsuk-table__cell nhsuk-u-font-size-16">
                                    <span class="nhsuk-table-responsive__heading">Course </span>
                                    <div class="nhsuk-checkboxes__item">
                                        <input data-group="course-list" class="nhsuk-checkboxes__input select-all-checkbox" id="self-assessment-check-@selfAssessment.Id" name="ApplicationIds" type="checkbox" value="@selfAssessment.Id">
                                        <label class="nhsuk-label nhsuk-checkboxes__label nhsuk-u-font-size-16" for="course-check-@selfAssessment.Id">
                                            @selfAssessment.SelfAssessment
                                        </label>
                                    </div>
                                </td>
                                <td class="nhsuk-table__cell nhsuk-u-font-size-16">
                                    <span class="nhsuk-table-responsive__heading">Provider </span>
                                    @selfAssessment.Provider
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </fieldset>
        <input type="hidden" asp-for="CentreId" />
        <button class="nhsuk-button" type="submit">
            Add selected self assessments to centre
        </button>
    </form>
}
else
{
    <h1>No courses available</h1>
    <p>There are no core courses available to add to the centre @ViewBag.CentreName.</p>
}

<vc:cancel-link asp-controller="Centres" asp-action="Courses" asp-all-route-data="@cancelLinkData" />
@section scripts {
    <script src="@Url.Content("~/js/learningPortal/verificationPickResults.js")" asp-append-version="true"></script>
}

<div class="searchable-element nhsuk-expander-group word-break" id="@Model.FaqId-card">

  <details class="nhsuk-details nhsuk-expander">
    <div>
      <span>
        <div>
          @Model.TargetGroup
        </div>
        <div>
          @Model.Published
        </div>
      </span>
    </div>
    <summary class="nhsuk-details__summary">
      <span class="nhsuk-details__summary-text" id="@Model.FaqId-name">
        <span class="searchable-element-title" name="name">@Model.QText</span>
      </span>
    </summary>

    <div class="nhsuk-details__text">
      <div class="nhsuk-u-margin-bottom-4">
        <span class="searchable-element-content">@Html.Raw(Model.AHtml)</span>
        <p class="searchable-element-content">Created: @Model.CreatedDate</p>
        <p class="searchable-element-content">Weighting: @Model.Weighting</p>
      </div>

      <div>
        <a class="nhsuk-button nhsuk-button--danger"
           role="button">
          Delete
        </a>
      </div>
      <div>
        <a class="nhsuk-button nhsuk-button"
           rols="button">
          Edit
        </a>
        <a class="nhsuk-button nhsuk-button--secondary"
           role="button">
          View on separate page
        </a>
      </div>

    </div>
  </details>
</div>

@using DigitalLearningSolutions.Web.ViewModels.CompetencyAssessments
@model AllCompetencyAssessmentsViewModel

<h1>All Competency Assessments</h1>
@if (!Model.CompetencyAssessments.Any() && Model.SearchString == null)
{
  <p class="nhsuk-u-margin-top-4" role="alert">
    <b>There are no competency assessments in the system.</b>
  </p>
}
else
{
  <form method="get" role="search" asp-action="FrameworksViewAll" asp-route-page="@Model.Page">

    <partial name="Shared/_CompetencyAssessmentsSearchAndSort" model="Model" />

    <hr class="nhsuk-u-margin-top-3 nhsuk-u-margin-bottom-4" />
    <partial name="Shared/_SearchResultsCount" model="Model" />
    <partial name="Shared/_AssessmentsGrid" model="Model.CompetencyAssessments" />
    <partial name="Shared/_Pagination" model="Model" />

  </form>
}

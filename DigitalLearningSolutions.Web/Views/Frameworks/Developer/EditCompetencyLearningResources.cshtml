@using DigitalLearningSolutions.Web.ViewModels.Frameworks;
@model CompetencyResourceSignpostingViewModel
<h2>Competency Resource Signposting</h2>
<div class="nhsuk-inset-text">
  <span class="nhsuk-u-visually-hidden">Information: </span>
  <p>
    @Model.NameOfCompetency
  </p>
</div>
<h3>Competency Resource Links</h3>

@if (Model.CompetencyResourceLinks.Any())
{
  foreach (var link in Model.CompetencyResourceLinks)
  {
    <partial name="_SignpostingCard.cshtml" model="link" />
  }

  <div class="nhsuk-u-margin-top-5">
    <a class="nhsuk-button small-edit-button nhsuk-u-margin-bottom-4" asp-action="AddResource">Add resource</a>
  </div>
  <div class="nhsuk-action-link">
    <a class="nhsuk-back-link__link nhsuk-u-padding-bottom-1 nhsuk-u-margin-left-1" asp-action="FrameworkDefaultQuestions" asp-route-frameworkId="@ViewContext.RouteData.Values["frameworkId"]">
      <svg class="nhsuk-icon nhsuk-icon__chevron-left" focusable='false' xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
        <path d="M13.41 12l5.3-5.29a1 1 0 1 0-1.42-1.42L12 10.59l-5.29-5.3a1 1 0 0 0-1.42 1.42l5.3 5.29-5.3 5.29a1 1 0 0 0 0 1.42 1 1 0 0 0 1.42 0l5.29-5.3 5.29 5.3a1 1 0 0 0 1.42 0 1 1 0 0 0 0-1.42z"></path>
      </svg>
      Cancel
    </a>
  </div>

}
else if (!Model.CompetencyResourceLinks.Any())
{
  <div class="nhsuk-warning-callout callout-green">
    <h3 class="nhsuk-warning-callout__label">
      <span role="text">
        This is an empty competency resource signposting.
      </span>
    </h3>
  </div>
}


@using DigitalLearningSolutions.Web.ViewModels.Frameworks
@model AllFrameworksViewModel

<h1>All Frameworks</h1>
@if (!Model.BrandedFrameworks.Any() && Model.SearchString == null) {
  <p class="nhsuk-u-margin-top-4" role="alert">
    <b>There are no frameworks in the system.</b>
  </p>
} else {
  <form method="get" role="search" asp-action="FrameworksViewAll" asp-route-page="@Model.Page">

    <partial name="Shared/_FrameworksSearchAndSort" model="Model" />

    <hr class="nhsuk-u-margin-top-3 nhsuk-u-margin-bottom-4" />
    <partial name="SearchablePage/_SearchResultsCount" model="Model" />

    <partial name="Shared/_BrandedFrameworkTable" model="Model.BrandedFrameworks" />
    @if (Model.TotalPages > 1) {
      <partial name="SearchablePage/_Pagination" model="Model" />
    }
  </form>
}

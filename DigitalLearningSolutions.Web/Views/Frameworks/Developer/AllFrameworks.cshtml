@using DigitalLearningSolutions.Web.ViewModels.Frameworks.Dashboard
@model AllFrameworksViewModel

@{
    ViewData["Title"] = "All Frameworks";
    ViewData["Application"] = "Framework Service";
}
<link rel="stylesheet" href="@Url.Content("~/css/frameworks/frameworksShared.css")" asp-append-version="true">
@section NavMenuItems {
  <partial name="Shared/_NavMenuItems" />
}
<h1>All Frameworks</h1>
@if (!Model.BrandedFrameworks.Any() && Model.SearchString == null)
{
  <p class="nhsuk-u-margin-top-4" role="alert">
    <b>There are no frameworks in the system.</b>
  </p>
}
else
{
  <form method="get" role="search" asp-action="FrameworksViewAll" asp-route-page="@Model.Page">
    <div class="nhsuk-grid-row sort-and-search">
      <partial name="Shared/_FrameworkPageSearch" model="Model" />
      <partial name="Shared/_FrameworkPageSort" model="Model" />
    </div>
    <hr class="nhsuk-u-margin-top-3 nhsuk-u-margin-bottom-4" />
    <partial name="Shared/_SearchResultsCount" model="Model" />
  </form>
  <partial name="Shared/_BrandedFrameworkTable" model="Model.BrandedFrameworks" />
  @if (Model.TotalPages > 1)
  {
    <partial name="Shared/_Pagination" model="Model" />
  }
}

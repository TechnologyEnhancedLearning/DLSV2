@using DigitalLearningSolutions.Data.Models.Frameworks;
@model Comment;
<div class="@(Model.UserIsCommenter ? "nhsuk-card comment comment-mine nhsuk-u-margin-bottom-3 nhsuk-u-margin-left-9 nhsuk-u-margin-right-6" : "nhsuk-card comment comment-other nhsuk-u-margin-bottom-3 nhsuk-u-margin-right-9 nhsuk-u-margin-left-6")">
  <div class="nhsuk-card__content">
    <div class="nhsuk-grid-row">
      <div class="nhsuk-grid-column-full">
        <h4 class="nhsuk-card__heading nhsuk-heading-xs heading-xxs" id="@Model.ID-header">
          @Model.Commenter <span class="heading-light">@Model.AddedDate.ToString("dddd dd MMMM yyyy h:mm tt")</span>
        </h4>
        <p class="nhsuk-body-s">
          @Html.Raw(Model.Comments)
        </p>
      </div>
      @if (Model.UserIsCommenter && (bool)ViewData["isLast"])
      {
        <div class="nhsuk-grid-column-full">
          <a class="nhsuk-button button-small delete-button nhsuk-u-margin-bottom-0 nhsuk-u-margin-top-0"
           aria-describedby="@Model.ID-header"
           asp-action="ArchiveReply"
           asp-controller="Frameworks"
           asp-route-commentId="@Model.ID"
           asp-route-replyToCommentId="@Model.ReplyToFrameworkCommentID"
           asp-route-frameworkId="@ViewContext.RouteData.Values["frameworkId"]">
            Delete
          </a>
        </div>
      }

    </div>
  </div>
</div>

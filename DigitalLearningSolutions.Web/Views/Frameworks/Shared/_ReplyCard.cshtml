@using DigitalLearningSolutions.Data.Models.Frameworks;
@model Comment;
<div class="@(Model.UserIsCommenter ? "nhsuk-card comment comment-mine nhsuk-u-margin-bottom-3 nhsuk-u-margin-left-9 nhsuk-u-margin-right-6" : "nhsuk-card comment comment-other nhsuk-u-margin-bottom-3 nhsuk-u-margin-right-9 nhsuk-u-margin-left-6")">
  <div class="nhsuk-card__content">
    <div class="nhsuk-grid-row">
      <div class="nhsuk-grid-column-full">
        <h4 class="nhsuk-card__heading marg nhsuk-heading-xs heading-xxs" id="@Model.ID-header">
          @Model.Commenter <span class="heading-light">@Model.AddedDate.ToString("dddd dd MMMM yyyy h:mm tt")</span>
        </h4>
        <p class="nhsuk-body-s">
          @Html.Raw(Model.Comments)
        </p>
      </div>
    </div>
  </div>
</div>

@using DigitalLearningSolutions.Data.Models.Frameworks;
@model CollaboratorDetail
@{
  var role = (Model.AdminID == null ? Model.FrameworkRole + " (not yet registered)" : Model.FrameworkRole);
  switch (Model.FrameworkRole)
  {
    case "Owner":
      <text>
        <strong class="nhsuk-tag role-tag">
          @role
        </strong>
      </text>
      break;
    case "Contributor":
      <text>
        <strong class="nhsuk-tag nhsuk-tag--blue role-tag">
          @role
        </strong>
      </text>
      break;
    case "Reviewer":
      <text>
        <strong class="nhsuk-tag nhsuk-tag--grey role-tag">
          @role
        </strong>
      </text>
      break;
  }
}

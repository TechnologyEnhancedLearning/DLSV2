@using DigitalLearningSolutions.Data.Models.Frameworks;
@model FrameworkCompetency;
<div class="nhsuk-card nhsuk-u-margin-bottom-5 nhsuk-u-margin-left-3">
  <div class="nhsuk-card__content">
    @if (Model.Description != null)
    {
    <details class="nhsuk-details">
      <summary class="nhsuk-details__summary">
        <span class="nhsuk-details__summary-text">
          @Model.Name
        </span>
      </summary>
      <div class="nhsuk-details__text">
        @Model.Description

      </div>
    </details>
    }
    else
    {
      <h4>
        @Model.Name
      </h4>
    }

    <p>
      <a class="nhsuk-button small-edit-button nhsuk-u-margin-right-1" href="#">Edit <span class="visually-hidden"> competency</span></a>
      <a class="nhsuk-button nhsuk-button--secondary small-edit-button nhsuk-u-margin-right-1" href="#">Move <span class="visually-hidden"> competency</span> up</a>
      <a class="nhsuk-button nhsuk-button--secondary small-edit-button nhsuk-u-margin-right-1" href=" #">Move <span class="visually-hidden"> competency</span> down</a>
      <a class="nhsuk-button nhsuk-button--secondary delete-button small-edit-button nhsuk-u-margin-right-1" href="#">Delete <span class="visually-hidden"> competency</span></a>
    </p>
  </div>
  </div>

@using DigitalLearningSolutions.Web.ViewModels.Register
@model LearnerInformationViewModel

@{
  var errorHasOccurred = !ViewData.ModelState.IsValid;
  ViewData["Title"] = errorHasOccurred ? "Error: Register - Learner information": "Register - Learner information";
  var centreError = ViewData.ModelState["Centre"]?.Errors?.Count > 0;
  var jobGroupError = ViewData.ModelState["JobGroup"]?.Errors?.Count > 0;
  var centreSelectErrorClass = centreError ? "nhsuk-select--error" : "";
  var centreFormErrorClass = centreError ? "nhsuk-form-group--error" : "";
  var jobGroupSelectErrorClass = jobGroupError ? "nhsuk-select--error" : "";
  var jobGroupFormErrorClass = jobGroupError ? "nhsuk-form-group--error" : "";
}

<div class="nhsuk-grid-row">
  <div class="nhsuk-grid-column-full">
    <form method="post" asp-action="LearnerInformation">

      @if (errorHasOccurred) {
        <partial name="_ErrorSummary"/>
      }

      <div class="nhsuk-u-margin-bottom-8">
        <h1 id="page-heading" class="nhsuk-heading-xl">Learner information</h1>
      </div>

      <div class="nhsuk-form-group @centreFormErrorClass">
        <label class="nhsuk-label" for="Centre">
          Centre
        </label>
        @if (centreError) {
          <span class="nhsuk-error-message" id="centre-error">
            <span class="nhsuk-u-visually-hidden">Error:</span> @ViewData.ModelState["Centre"].Errors[0].ErrorMessage
          </span>
        }
        <select class="nhsuk-select @centreSelectErrorClass" id="Centre" aria-describedby="centre-error" asp-for="Centre">
          <option value="" disabled selected>Select a centre</option>
          @foreach (var option in ViewBag.Centres) {
            <option value="@option.Item1">@option.Item2</option>
          }
        </select>
      </div>

      <div class="nhsuk-form-group @jobGroupFormErrorClass">
        <label class="nhsuk-label" for="JobGroup">
          Job group
        </label>
        @if (centreError) {
          <span class="nhsuk-error-message" id="job-group-error">
            <span class="nhsuk-u-visually-hidden">Error:</span> @ViewData.ModelState["JobGroup"].Errors[0].ErrorMessage
          </span>
        }
        <select class="nhsuk-select @jobGroupSelectErrorClass" id="JobGroup" aria-describedby="job-group-error" asp-for="JobGroup">
          <option value="" disabled selected>Select a job group</option>
          @foreach (var option in ViewBag.JobGroups) {
            <option value="@option.Item1">@option.Item2</option>
          }
        </select>
      </div>

      <button class="nhsuk-button" type="submit">Next</button>
    </form>

    <p>
      <vc:back-link asp-controller="Register" asp-action="Index" />
    </p>
  </div>
</div>
